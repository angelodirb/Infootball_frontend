# Copiar este archivo a .env.local y completar con tus valores reales

# API de Fútbol (elige una opción)

# Opción 1: API-Football (RapidAPI)
NEXT_PUBLIC_FOOTBALL_API_KEY=tu_api_key_aqui
NEXT_PUBLIC_FOOTBALL_API_URL=https://v3.football.api-sports.io

# Opción 2: TheSportsDB
NEXT_PUBLIC_SPORTSDB_API_KEY=tu_api_key_aqui
NEXT_PUBLIC_SPORTSDB_API_URL=https://www.thesportsdb.com/api/v1/json

# Opción 3: Football-Data.org
NEXT_PUBLIC_FOOTBALL_DATA_API_KEY=tu_api_key_aqui
NEXT_PUBLIC_FOOTBALL_DATA_API_URL=https://api.football-data.org/v4

# Autenticación (si usas NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=tu_secret_generado_aqui

# Base de datos (si usas una)
DATABASE_URL=tu_database_url_aqui

# Configuración del entorno
NODE_ENV=development
